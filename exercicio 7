
let n = prompt("Digite o numero : ");

n = parseInt(n);

ParOuNao = n % 2

if(ParOuNao == 0){

    console.log("esse numero eh par")

}else{

    console.log("esse numero eh impar")
}
if(n <= -1){

    console.log("e esse numero eh negativo")

}else{
    
    console.log("e esse numero eh positivo")

}
